
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // TEMPORARY DEBUGGING: Allow public reads and authenticated writes to all documents.
    // This is to verify the database connection and basic permissions.
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // This rule is still needed to allow unauthenticated users to submit the contact form.
    match /messages/{messageId} {
      allow create: if true;
    }
  }
}
