
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // PUBLIC READS for portfolio content
    match /profile/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /projects/{projectId} {
        allow read: if true;
        allow write: if request.auth != null;
    }
     match /skills/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
     match /education/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /theme/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // CONTACT FORM - allow anyone to submit
    match /messages/{messageId} {
      allow create: if true;
      // ADMIN ACCESS for messages
      allow read, update, delete: if request.auth != null;
    }
  }
}
