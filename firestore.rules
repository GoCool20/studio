
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public reads on portfolio content
    // Only allow admin writes to the specific 'main' document
    match /profile/main {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /skills/main {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /education/main {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /theme/main {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public reads on all projects
    // Allow any authenticated user to create, update, delete projects
    match /projects/{projectId} {
        allow read: if true;
        allow write: if request.auth != null;
    }

    // CONTACT FORM - allow anyone to submit (create)
    match /messages/{messageId} {
      allow create: if true;
      // ADMIN ACCESS for messages (read, update, delete)
      allow read, update, delete: if request.auth != null;
    }
  }
}
